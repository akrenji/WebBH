@using PagedList.Mvc
@using WebTBGD.Models
@model PagedList.PagedList<CTDATHANG>
@{
    ViewBag.Title = "KetQuaTimKiemKH";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="text-align:center">@ViewBag.ThongBao</div>
<table class="table" style="margin-left:20px">
    <tr>
        <th>
            Tên Khách Hàng
        </th>
        <th>
            Sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đã thanh toán
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th>
            Tình trạng  giao hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.DONDATHANG.KHACHHANG.TENKH
        </td>
        <td>
            @item.SANPHAM.TENSP
        </td>
        <td>
            @item.SOLUONG
        </td>
        <td>
            @item.DONDATHANG.DATHANHTOAN
        </td>
        <td>
            @item.DONDATHANG.NGAYDAT
        </td>
        <td>
            @item.DONDATHANG.NGAYGIAO
        </td>
        <td>
            @item.DONDATHANG.TINHTRANGGIAOHANG
        </td>
        
    </tr>
}

</table>




<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiem", new { page = page, @sTuKhoa = ViewBag.TuKhoa }))
</div>
<style>
    .MenuTrang li {
        display: inline;
        float: left;
    }
</style>

