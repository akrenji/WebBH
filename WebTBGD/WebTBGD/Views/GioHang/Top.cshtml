@using WebTBGD.Models
@model List<GioHang>


<div class="header_top">
    <div class="logo">
        <a href="@Url.Action("Index","Home")"><img src="~/image/logo.png" alt="" /></a>
    </div>
    <div class="cart">
        <p>
            Giỏ Hàng  <span> Đang có :</span><div id="dd" class="wrapper-dropdown-2">
                                                 <a href="@Url.Action("GioHang","GioHang")"> @ViewBag.Tongsoluong Sản phẩm  </a>
                <ul class="dropdown">
                    <li>Bạn có @ViewBag.Tongsoluong  Sản Phẩm ! <br /> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</li>
                </ul>
            </div>
        </p>
    </div>
    <script type="text/javascript">
			function DropDown(el) {
				this.dd = el;
				this.initEvents();
			}
			DropDown.prototype = {
				initEvents : function() {
					var obj = this;

					obj.dd.on('click', function(event){
						$(this).toggleClass('active');
						event.stopPropagation();
					});
				}
			}

			$(function() {

				var dd = new DropDown( $('#dd') );

				$(document).click(function() {
					// all dropdowns
					$('.wrapper-dropdown-2').removeClass('active');
				});

			});

    </script>
    <div class="clear"></div>
</div>
<div class="header_bottom">
    <div class="menu">
        <ul>
            <li class="active"><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
            <li><a href="news.html">Tin Tức</a></li>
            <li><a href="@Url.Action("Contact","Home")">Liên Hệ</a></li>
            <div class="clear"></div>
        </ul>
    </div>
    <div class="search_box">
            @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
            {
            <form>
          
                <input type="text" value="Search" name="txttimkiem" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                <input type="submit" value="">
            </form>
            }
    </div>
    <div class="clear"></div>
</div>


